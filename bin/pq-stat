#!/usr/bin/env bash

# all of these stem from https://www.shellcheck.net/wiki/
set -o pipefail  # propagate errors
set -u  # exit on undefined
set -e  # exit on non-zero return value
#set -f  # disable globbing/filename expansion
shopt -s failglob  # error on unexpaned globs
shopt -s inherit_errexit  # Bash disables set -e in command substitution by default; reverse this behavior


cleanup () { set +x; }
trap cleanup EXIT

_help() {
cat <<EOF
USAGE: pq-stat [PUEUE OPTIONS] [--limit LIMIT]

EOF
}

LIMIT=5
while [ $# -gt 0 ]; do
key="$1"
  case "$key" in
    --limit)
    LIMIT="$2"
    shift 2
    ;;

    -h|--help)
    _help
    exit 0
    ;;

    --)
    shift
    break
    ;;

    *)
    break
    ;;

  esac
done

extra_args=()
if [ $# -lt 1 ]; then
  extra_args=(-g now)
fi

set -x
pueue status "${extra_args[@]}" "$@"  columns=id,status,command,start,end 'start > 2000-01-01'  order_by start last "$LIMIT"

