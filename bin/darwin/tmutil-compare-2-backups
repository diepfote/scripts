#!/usr/bin/env bash


set -o pipefail  # propagate errors
set -u  # exit on undefined
set -e  # exit on non-zero return value
#set -f  # disable globbing/filename expansion
shopt -s failglob  # error on unexpaned globs


# shellcheck source=/dev/null
source ~/Documents/scripts/source-me/spinner.sh


set +u
spinner
spinner_pid="$!"
set -u

cleanup () {
  popd || true
  set +x

  local spinner_pid="$1"
  kill "$spinner_pid"
}

# shellcheck disable=SC2064
trap 'cleanup "$spinner_pid"' EXIT  # stop spinner

if [ $# -lt 2 ]; then
  tmutil listbackups -m
  exit 0
fi

disk_backup_loc="$(~/Documents/python/tools/split_timemachine_path.py "$1" 0)"
pushd "$disk_backup_loc"
path1="$(~/Documents/python/tools/split_timemachine_path.py "$1" 1)"
path2="$(~/Documents/python/tools/split_timemachine_path.py "$2" 1)"

# $ tmutil listbackups
set -x
sudo tmutil compare "$path1" "$path2" |\
stdbuf -o0 tr '\t' ' ' |\
stdbuf -o0 tr -s ' ' |\
sort -k2 -h

