#!/usr/bin/env bash

# all of these stem from https://www.shellcheck.net/wiki/
set -o pipefail  # propagate errors
set -u  # exit on undefined
set -e  # exit on non-zero return value
#set -f  # disable globbing/filename expansion
shopt -s failglob  # error on unexpaned globs
shopt -s inherit_errexit  # Bash disables set -e in command substitution by default; reverse this behavior

home="$(read-ini-setting ~/.config/personal/sync.conf rsync.net.home)"

# make sure to set this up in your
# default ssh config file
# libssh does not follow Include directives
host=mpv-rsync.net

if [ $# -eq 0 ]; then
  _help
  exit
fi

cleanup () { set +x; }
trap cleanup EXIT

# Parse arguments
DECODE=''
BLOCKING=''
while [ $# -gt 0 ]; do
key="$1"
  case "$key" in
    --decode)
    DECODE=true
    shift
    ;;

    --blocking)
    BLOCKING=true
    shift
    ;;

    -h|--help)
    _help
    exit 0
    ;;

    --)
    shift
    break
    ;;

    *)
    break
    ;;

  esac
done

set -x
if [ -n "$DECODE" ]; then
  full_url="$1"
  shift
  decoded_full_sftp_url="$(urldecode "$full_url")"

  # cut off anything before Media/
  path="$(echo -n "$decoded_full_sftp_url" | sed -r 's#.*(Media/)#\1#')"
else
  path="$1"
  shift
fi

if [ -n "$BLOCKING" ]; then
  set -x
  mpv -v "$@" "sftp://$host$home/$path"
else
  set -x
  ( mpv "$@" "sftp://$host$home/$path" >/dev/null 2>&1 & )
fi
set +x
