#!/usr/bin/env bash

_editor="$EDITOR"

trap cleanup EXIT
cleanup () {
  export EDITOR="$_editor"
}

export EDITOR=("$EDITOR" -c 'set noundofile')

PASS=/opt/homebrew/bin/pass
if ! command -v "$PASS" >/dev/null; then
  PASS=/usr/bin/pass
fi

(unset GIT_COMMITER_EMAIL GIT_COMMITER_NAME GIT_AUTHOR_NAME GIT_AUTHOR_EMAIL && "$PASS" "$@")

