#!/usr/bin/env bash

# all of these stem from https://www.shellcheck.net/wiki/
set -o pipefail  # propagate errors
set -u  # exit on undefined
set -e  # exit on non-zero return value
#set -f  # disable globbing/filename expansion
shopt -s failglob  # error on unexpaned globs
shopt -s inherit_errexit  # Bash disables set -e in command substitution by default; reverse this behavior


# set -x
# cleanup () { set +x; }
# trap cleanup EXIT


GIT=(/opt/homebrew/bin/git)
if [ "$(uname)" = Linux ]; then
  # GIT=(firejail --profile=/etc/firejail/git.profile /usr/bin/git)
  GIT=(/usr/bin/git)
fi

BASE="$("${GIT[@]}" rev-parse --show-toplevel 2>/dev/null || true)"

commit () {
  local ADD_PREFIX=''

  if [[ "$BASE" =~ deploy-.* ]]; then
    ADD_PREFIX=true
    saved_opts=()
    message=''
    while [ $# -gt 0 ]; do
    key="$1"
      case "$key" in
        -m)
        message="$2"
        shift 2
        # nothing else needs to be modified
        # leave the rest as it is
        break
        ;;

        --amend)
          ADD_PREFIX=''
          saved_opts+=(--amend)
          shift
          ;;


        --)
        shift
        break
        ;;

        *)
        # match only required if `-m` is not the first opt
        saved_opts+=("$1")
        shift
        ;;

      esac
    done

    prefix="[$(awk -F '/' '{ print $3 }' "$BASE"/.git/HEAD)] "

    if [ -n "$ADD_PREFIX" ]; then
      "${GIT[@]}" commit -m "$prefix$message" "${saved_opts[@]}" "$@"
    else
      "${GIT[@]}" commit "${saved_opts[@]}" "$@"
    fi
  else

    "${GIT[@]}" commit "$@"
  fi
}

push () {
  if which git-remote-gcrypt >/dev/null 2>&1 && [ "$PWD" != /etc ] ; then
    # additional command to run
    if git-remote-gcrypt --check "$(grep url "$BASE"/.git/config |\
         awk '{ print $3 }' |\
         head -n1 |\
         sed 's#^.*gcrypt::## ; s/#.*"$//')" >/dev/null 2>&1; then
      # shellcheck disable=SC2016
      echo '[.] running pull for `git-remote-gcrypt` repo before push' >&2
      "${GIT[@]}" pull "$@"
      echo '[.] --' >&2
    fi
  fi

  "${GIT[@]}" push "$@"
}



COMMIT=''
CHECKOUT=''
PUSH=''
while [ $# -gt 0 ]; do
key="$1"
  case "$key" in
    commit)
    COMMIT=true
    shift
    ;;

    checkout)
    CHECKOUT=true
    shift
    ;;

    push)
    PUSH=true
    shift
    ;;

    --)
    shift
    break
    ;;

    *)
    break
    ;;

  esac
done


if [ -n "$PUSH" ]; then
  push "$@"

elif [ -n "$CHECKOUT" ]; then
  "${GIT[@]}" checkout "$@"

  if [ $# -eq 1 ]; then
    GIT_PAGER=''  "${GIT[@]}" l -2
  fi

elif [ -n "$COMMIT" ]; then

  commit "$@"

else

  "${GIT[@]}" "$@"
fi

exit "$?"

